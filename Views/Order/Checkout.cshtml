@{
}
<div class="container">
    <div class="row">
        <div class="col">
            <h2>Checkout</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="Checkout" method="post">
                <div class="form-control mb-3">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control mb-3" />
                </div>
                <div class="form-control mb-3">
                    <label>Address</label>
                    <input asp-for="Line1" class="form-control mb-3" />
                </div>
                <div class="form-control mb-3">
                    <label>City</label>
                    <input asp-for="City" class="form-control mb-3" />
                </div>
                <div class="form-control mb-3">
                    <label>State</label>
                    <input asp-for="State" class="form-control mb-3" />
                </div>
                <div class="form-control mb-3">
                    <label>Zip</label>
                    <input asp-for="Zip" class="form-control mb-3" />
                </div>
                <div class="form-control mb-3">
                    <label>Country</label>
                    <input asp-for="Country" class="form-control mb-3" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Complete Order</button>
                </div>
            </form>
        </div>
    </div>
</div>