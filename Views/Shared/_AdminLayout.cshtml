<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab_06</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" /></head>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<body>
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col">
                @await Component.InvokeAsync("Navigation")
            </div>
        </div>
        @if(TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        <div class="row">
            <div class="col row-cols-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            Admin Settings
                        </h5>
                        <p class="card-text">
                            <div class="list-group">
                                <a asp-action="OutstandingOrders" asp-controller="Order" class="list-group-item list-group-item-action" aria-current="true">
                                    Outstanding Orders
                                </a>
                                <a asp-action="index" asp-controller="videos" class="list-group-item list-group-item-action">
                                    Videos
                                </a>
                                @*<a href="#" class="list-group-item list-group-item-action">A third link item</a>*@
                                @*<a href="#" class="list-group-item list-group-item-action">A fourth link item</a>*@
                            </div>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
